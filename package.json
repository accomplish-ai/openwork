{
  "name": "accomplish",
  "version": "0.1.0",
  "private": true,
  "description": "The open source AI coworker that lives on your desktop",
  "author": "Accomplish Inc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/accomplish-ai/accomplish.git"
  },
  "scripts": {
    "predev": "node scripts/check-deps.cjs",
    "dev": "pnpm -F @accomplish/electron dev",
    "predev:clean": "node scripts/check-deps.cjs",
    "dev:clean": "pnpm -F @accomplish/electron dev:clean",
    "postinstall": "node scripts/save-lockfile-hash.cjs",
    "build": "pnpm -r build",
    "build:electron": "pnpm -F @accomplish/electron build",
    "build:web": "pnpm -F @accomplish/web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "release": "pnpm build"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
