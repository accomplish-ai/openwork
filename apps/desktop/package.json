{
  "name": "@accomplish/desktop",
  "version": "0.3.8",
  "private": true,
  "type": "module",
  "description": "Accomplish Desktop App",
  "homepage": "https://github.com/accomplish-ai/accomplish",
  "author": {
    "name": "Accomplish Inc",
    "email": "hello@accomplish.ai"
  },
  "main": "dist-electron/main/index.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.cjs",
    "dev": "node scripts/patch-electron-name.cjs && node -e \"require('fs').rmSync('dist-electron',{recursive:true,force:true})\" && ACCOMPLISH_ROUTER_URL=http://localhost:5173 vite",
    "dev:clean": "CLEAN_START=1 ACCOMPLISH_ROUTER_URL=http://localhost:5173 vite",
    "build": "pnpm -F @accomplish/web build && node -e \"const fs=require('fs'); if(fs.existsSync('dist-web')) fs.rmSync('dist-web', {recursive:true, force:true}); fs.mkdirSync('dist-web');\" && cp -r ../web/dist/client/* dist-web/ && tsc && vite build && node scripts/bundle-skills.cjs",
    "build:electron": "pnpm -F @accomplish/web build && tsc && vite build && node scripts/package.cjs",
    "build:unpack": "pnpm -F @accomplish/web build && tsc && vite build && node scripts/package.cjs --dir",
    "package": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --mac --publish never",
    "package:mac": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --mac --publish never",
    "release": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --mac --publish always",
    "release:mac": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --mac --publish always",
    "package:win": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --win --x64 --publish never",
    "release:win": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --win --x64 --publish always",
    "package:linux": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && DEBUG=electron-builder node scripts/package.cjs --linux --publish never",
    "release:linux": "ACCOMPLISH_BUNDLED_MCP=1 pnpm build && node scripts/package.cjs --linux --publish always",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "node -e \"const fs=require('fs');['dist','dist-electron','release'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "download:nodejs": "node scripts/download-nodejs.cjs",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "docker compose -f e2e/docker/docker-compose.yml up --build --abort-on-container-exit --exit-code-from e2e-tests",
    "test:e2e:build": "docker compose -f e2e/docker/docker-compose.yml build",
    "test:e2e:clean": "docker compose -f e2e/docker/docker-compose.yml down --rmi local -v",
    "test:e2e:report": "playwright show-report e2e/html-report",
    "test:e2e:native": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:native:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:native:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:native:fast": "playwright test --config=e2e/playwright.config.ts --project=electron-fast",
    "test:e2e:native:integration": "playwright test --config=e2e/playwright.config.ts --project=electron-integration",
    "test:e2e:providers": "playwright test --config=e2e/playwright.config.ts --project=provider-e2e",
    "test:local-agent": "npx tsx scripts/test-local-agent-cli.ts"
  },
  "dependencies": {
    "@accomplish/web": "workspace:*",
    "@accomplish_ai/agent-core": "workspace:*",
    "@aws-sdk/client-bedrock": "^3.971.0",
    "@aws-sdk/credential-providers": "^3.971.0",
    "@azure/identity": "^4.13.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "gray-matter": "^4.0.3",
    "node-pty": "^1.1.0",
    "opencode-ai": "1.2.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.1.2",
    "electron": "^35.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^4.0.17"
  },
  "build": {
    "npmRebuild": false,
    "compression": "normal",
    "appId": "ai.accomplish.desktop",
    "productName": "Accomplish",
    "executableName": "accomplish",
    "artifactName": "Accomplish-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist-electron/**/*",
      "node_modules/opencode-ai/**",
      "node_modules/opencode-linux-x64/**",
      "node_modules/opencode-linux-arm64/**",
      "node_modules/opencode-windows-x64/**",
      "node_modules/opencode-windows-x64-baseline/**",
      "node_modules/opencode-darwin-x64/**",
      "node_modules/opencode-darwin-arm64/**",
      "node_modules/node-pty/**",
      "node_modules/electron-store/**",
      "node_modules/conf/**",
      "node_modules/env-paths/**",
      "node_modules/json-schema-typed/**",
      "node_modules/atomically/**",
      "node_modules/debounce-fn/**",
      "!node_modules/@accomplish_ai/**",
      "!node_modules/@accomplish/**"
    ],
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "../../packages/agent-core/mcp-tools",
        "to": "mcp-tools",
        "filter": [
          "**/*",
          "!**/profiles/**",
          "!**/tmp/**",
          "!**/.git/**",
          "!**/.browser-data/**",
          "!**/.ignored_*/**",
          "!**/bun.lock",
          "!**/*.test.ts",
          "!**/vitest.config.ts"
        ]
      },
      {
        "from": "dist-web",
        "to": "web-ui"
      },
      {
        "from": "bundled-skills",
        "to": "bundled-skills",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/opencode-ai/**/*",
      "node_modules/opencode-windows-x64/**/*",
      "node_modules/opencode-windows-x64-baseline/**/*",
      "node_modules/opencode-linux-x64/**/*",
      "node_modules/opencode-linux-arm64/**/*",
      "node_modules/opencode-darwin-x64/**/*",
      "node_modules/opencode-darwin-arm64/**/*",
      "node_modules/node-pty/build/**/*.node",
      "node_modules/node-pty/package.json",
      "node_modules/better-sqlite3/build/**/*.node",
      "node_modules/better-sqlite3/package.json",
      "dist-electron/main/mcp/*.js"
    ],
    "afterPack": "./scripts/after-pack.cjs",
    "publish": {
      "provider": "github",
      "owner": "accomplish-ai",
      "repo": "accomplish"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "icon": "resources/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Accomplish",
      "runAfterFinish": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "maintainer": "Accomplish Inc <hello@accomplish.ai>",
      "category": "Office",
      "icon": "resources/icon.png",
      "desktop": {
        "Name": "Accomplish",
        "GenericName": "AI Desktop Assistant",
        "Comment": "Open source AI coworker that lives on your desktop",
        "Categories": "Office;Development;Utility;",
        "Keywords": "AI;Assistant;Productivity;",
        "StartupWMClass": "Accomplish",
        "StartupNotify": "true"
      }
    },
    "deb": {
      "afterInstall": "build/linux-postinstall.sh"
    }
  }
}
