{
  "name": "@accomplish/desktop",
  "version": "0.3.8",
  "private": true,
  "type": "module",
  "description": "Accomplish Desktop App",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.cjs",
    "dev": "node scripts/patch-electron-name.cjs && npx electron-rebuild -f && node -e \"require('fs').rmSync('dist-electron',{recursive:true,force:true})\" && ACCOMPLISH_DEV_SERVER_URL=http://localhost:5173 vite",
    "dev:clean": "CLEAN_START=1 vite",
    "build": "pnpm -F @accomplish/web build && tsc && vite build && node -e \"require('fs').cpSync('../web/dist','./dist',{recursive:true})\" && node scripts/bundle-skills.cjs",
    "build:desktop": "tsc && vite build && node scripts/package.cjs",
    "build:unpack": "tsc && vite build && node scripts/package.cjs --dir",
    "package": "pnpm build && node scripts/package.cjs --mac --publish never && npx electron-rebuild -f",
    "package:mac": "pnpm build && node scripts/package.cjs --mac --publish never && npx electron-rebuild -f",
    "release": "pnpm build && node scripts/package.cjs --mac --publish always",
    "release:mac": "pnpm build && node scripts/package.cjs --mac --publish always",
    "package:win": "pnpm build && node scripts/package.cjs --win --x64 --publish never",
    "release:win": "pnpm build && node scripts/package.cjs --win --x64 --publish always",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "node -e \"const fs=require('fs');['dist','dist-electron','release'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "download:nodejs": "node scripts/download-nodejs.cjs",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@accomplish_ai/agent-core": "0.3.1",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "fix-path": "^5.0.0",
    "node-pty": "^1.1.0",
    "opencode-ai": "1.1.16",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.17",
    "electron": "^35.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.24.2",
    "jsdom": "^27.4.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.28.8",
    "vitest": "^4.0.17"
  },
  "build": {
    "npmRebuild": false,
    "compression": "normal",
    "appId": "ai.accomplish.desktop",
    "productName": "Accomplish (formerly Openwork)",
    "artifactName": "Accomplish-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/opencode-ai/**",
      "node_modules/node-pty/**",
      "node_modules/electron-store/**",
      "node_modules/conf/**",
      "node_modules/env-paths/**",
      "node_modules/json-schema-typed/**",
      "node_modules/atomically/**",
      "node_modules/debounce-fn/**",
      "!node_modules/@accomplish_ai/**",
      "!node_modules/opencode-darwin-*/**",
      "!node_modules/opencode-linux-*/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/opencode-ai/bin/opencode",
      "node_modules/opencode-ai/bin/opencode.exe",
      "node_modules/opencode-ai/package.json",
      "node_modules/opencode-windows-x64/bin/opencode.exe",
      "node_modules/opencode-windows-x64/package.json",
      "node_modules/opencode-windows-x64-baseline/bin/opencode.exe",
      "node_modules/opencode-windows-x64-baseline/package.json",
      "node_modules/node-pty/build/**/*.node",
      "node_modules/node-pty/package.json",
      "node_modules/better-sqlite3/build/**/*.node",
      "node_modules/better-sqlite3/package.json",
      "dist-electron/main/mcp/*.js"
    ],
    "afterPack": "./scripts/after-pack.cjs",
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "node_modules/@accomplish_ai/agent-core/mcp-tools",
        "to": "mcp-tools",
        "filter": [
          "**/*",
          "!**/profiles/**",
          "!**/tmp/**",
          "!**/.git/**",
          "!**/.browser-data/**",
          "!**/.ignored_*/**",
          "!**/bun.lock",
          "!**/*.test.ts",
          "!**/vitest.config.ts"
        ]
      },
      {
        "from": "bundled-skills",
        "to": "bundled-skills",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "accomplish-ai",
      "repo": "accomplish"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "icon": "resources/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Accomplish",
      "runAfterFinish": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": false
    }
  }
}
