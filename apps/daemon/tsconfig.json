{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@accomplish_ai/agent-core": [
                "../../packages/agent-core/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}