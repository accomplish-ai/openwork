{
  "name": "@accomplish/web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.client.json --noEmit && vite build",
    "build:lite": "APP_TIER=lite tsc -p tsconfig.client.json --noEmit && APP_TIER=lite vite build",
    "build:enterprise": "APP_TIER=enterprise tsc -p tsconfig.client.json --noEmit && APP_TIER=enterprise vite build",
    "typecheck": "tsc -p tsconfig.client.json --noEmit && tsc -p tsconfig.server.json --noEmit",
    "lint": "tsc -p tsconfig.client.json --noEmit && tsc -p tsconfig.server.json --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@accomplish_ai/agent-core": "0.3.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "hono": "^4.11.9",
    "lucide-react": "^0.563.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-markdown": "^9.0.1",
    "react-router": "^7.13.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260212.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "catalog:",
    "autoprefixer": "^10.4.24",
    "jsdom": "catalog:",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "wrangler": "^4.64.0"
  }
}
